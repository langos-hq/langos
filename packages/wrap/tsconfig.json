{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "esnext",
    "target": "esnext",

    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "jsx": "react-jsx",
    "esModuleInterop": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}